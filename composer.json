{
    "name": "impensavel/spoil",
    "type": "library",
    "description": "SPOIL is a PHP library for SharePoint Online (2013) and SharePoint for Office 365.",
    "keywords": [
        "sharepoint",
        "online",
        "2013",
        "office",
        "365",
        "oauth",
        "rest",
        "api",
        "client"
    ],
    "homepage": "https://github.com/impensavel/spoil",
    "license": "MIT",
    "authors": [
        {
            "name": "Quetzy Garcia",
            "email": "quetzyg@impensavel.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "php-http/client-implementation": "^1.0.0",
        "php-http/message": "^1.0",
        "firebase/php-jwt": "1.*",
        "nesbot/carbon": "~1.0"
    },
    "require-dev": {
        "php-http/guzzle6-adapter": "^1.0.0",
        "phpunit/phpunit": "~4.0",
        "fabpot/php-cs-fixer": "~1.0"
    },
    "autoload": {
        "psr-4": {
            "Impensavel\\Spoil\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Impensavel\\Spoil\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "cs": "php-cs-fixer fix src --level=psr2 --verbose",
        "test": "phpunit --verbose"
    }
}
